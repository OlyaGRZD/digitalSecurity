<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".lessonOneFragments.PageSevenFragment"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/signsAboveLeftTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkBlue"
            android:textSize="20sp"
            android:layout_marginTop="25sp"
            android:layout_marginStart="15sp"
            android:text="@string/signsAboveLeft"
            android:fontFamily="@font/roboto_medium"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            app:cardCornerRadius="12sp"
            android:backgroundTint="@color/blueBg"
            android:layout_marginEnd="120sp"
            android:layout_marginStart="20sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/timeImage"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_time"
                    android:layout_marginStart="15sp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/timeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"
                    android:text="@string/time"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            app:cardCornerRadius="12sp"
            android:backgroundTint="@color/blueBg"
            android:layout_marginEnd="90sp"
            android:layout_marginStart="20sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/searchImage"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_search"
                    android:layout_marginStart="15sp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/searchTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"
                    android:text="@string/search"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            app:cardCornerRadius="12sp"
            android:backgroundTint="@color/blueBg"
            android:layout_marginEnd="60sp"
            android:layout_marginStart="20sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/netOperatorImage"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_net_operator"
                    android:layout_marginStart="15sp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/netOperatorTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"
                    android:text="@string/netOperator"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/whatElseTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blueBg"
            android:textSize="18sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="25sp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/whatElseAbove" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12sp"
            android:backgroundTint="@color/lightGreen"
            android:layout_marginTop="40sp"
            android:layout_marginHorizontal="10sp">

            <TextView
                android:id="@+id/ToDoNoticeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginHorizontal="5sp"
                android:textAlignment="center"
                android:layout_marginVertical="20sp"
                android:text="@string/whatToDoNotice"
                android:fontFamily="@font/roboto_medium"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</FrameLayout>