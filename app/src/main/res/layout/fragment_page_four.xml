<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".lessonOneFragments.PageFourFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Значки и кнопки управления на экране"
            android:textColor="@color/blueBg"
            android:textSize="23sp"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_horizontal"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blueBg"
            app:cardCornerRadius="12dp"
            android:layout_marginEnd="25sp"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/widgetsTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/widgets"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:layout_marginStart="10sp"/>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="242dp"
            android:layout_height="293dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:src="@drawable/ic_main_screen"
            android:layout_marginTop="15sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blueBg"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="15sp"
            android:layout_marginStart="25sp">

            <TextView
                android:id="@+id/anotherWidgets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="19sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="10sp"
                android:layout_marginVertical="10sp"
                android:textColor="@color/white"
                android:textAlignment="textEnd"
                android:text="@string/anotherWidgets" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</FrameLayout>