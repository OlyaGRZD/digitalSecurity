<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".lessonOneFragments.PageFiveFragment"
    android:background="@color/blueBg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/operationSystems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/operationSystems"
            android:textColor="@color/white"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="20sp"
            android:layout_marginStart="20sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12sp"
            android:backgroundTint="@color/darkBlue"
            android:layout_marginStart="30sp"
            android:layout_marginTop="15sp">

            <TextView
                android:id="@+id/operationSystems2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/operationSystemsTwo"
                android:textColor="@color/white"
                android:layout_marginVertical="10sp"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginEnd="10sp"
                android:textAlignment="textEnd"/>
        </androidx.cardview.widget.CardView>


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="334dp"
            android:layout_height="334dp"
            android:src="@drawable/ic_update"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12sp"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="10sp"
            android:backgroundTint="@color/white">

            <TextView
                android:id="@+id/dontWorry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15sp"
                android:textAlignment="center"
                android:layout_marginVertical="5sp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/dontWorry"
                android:textColor="@color/red"
                android:textSize="19sp"/>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
</FrameLayout>