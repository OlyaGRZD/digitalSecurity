<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lessonOneFragments.PageTwoFragment"
    android:background="@color/white">
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_horizontal"
            android:text="Включение, выключение и перезагрузка телефона"
            android:textColor="@color/blueBg"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12sp"
            android:backgroundTint="@color/blueBg"
            android:layout_marginTop="15sp">

            <TextView
                android:id="@+id/startOnTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/StartOn"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:layout_marginVertical="10sp"
                android:layout_marginHorizontal="15sp"/>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/turnOffImage"
            android:layout_width="235dp"
            android:layout_height="217dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_on_off_btn" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkBlue"
            app:cardCornerRadius="12dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20sp">

            <TextView
                android:id="@+id/volumeButtTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/VolumeButtons"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginVertical="15sp"
                android:layout_marginHorizontal="15sp"/>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</FrameLayout>