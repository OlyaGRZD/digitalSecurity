<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".lessonOneFragments.PageOneFragment"
    android:background="@color/blueBg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/smartphoneDefTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/smartphone"
            android:textSize="24sp"
            android:layout_marginTop="30sp"
            android:layout_marginHorizontal="10sp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="266dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="10sp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_smartphones" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="12dp"
            android:layout_marginStart="30dp">

            <TextView
                android:id="@+id/whySmartTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/whySmartphone"
                android:textColor="@color/blueBg"
                android:textSize="20sp"
                android:layout_marginVertical="10sp"
                android:layout_marginStart="10sp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="12dp"
            android:layout_marginEnd="30dp"
            android:layout_marginVertical="20sp">

            <TextView
                android:id="@+id/whySmartTV2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/whySmartphone2"
                android:textSize="20sp"
                android:layout_marginVertical="10sp"
                android:layout_marginStart="15sp"
                android:textColor="@color/blueBg"
                />

        </androidx.cardview.widget.CardView>



    </LinearLayout>

</FrameLayout>